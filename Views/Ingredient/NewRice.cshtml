@model Rice
@{
    ViewData["Title"] = "New Rice";
}
<div class="container p-4">
    <h1>Add New Rice</h1>
    <form asp-action="CreateRice" asp-controller="Ingredient" method="post">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <p>In stock?</p>
        <div class="form-check">
            <input asp-for="InStock" type="radio" value="true" class="form-check-input" checked />
            <label class="form-check-label">Yes</label>
        </div>
        <div class="form-check">
            <input asp-for="InStock" type="radio" value="false" class="form-check-input" />
            <label class="form-check-label">No</label>
        </div>
        <div>
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="d-flex justify-content-center">
            <button class='btn btn-primary mt-4 px-5'>Submit</button>
        </div>
    </form>
</div>